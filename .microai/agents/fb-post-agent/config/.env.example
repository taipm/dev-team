# Facebook Post Agent Configuration
# Copy this file to .env and fill in your values

# Required: Page Access Token
# Get from: https://developers.facebook.com/tools/explorer/
FB_PAGE_TOKEN=your_page_access_token_here

# Required: Facebook Page ID
# Found in: Page Settings > About > Page ID
FB_PAGE_ID=your_page_id_here

# Optional: API Version (default: v22.0)
FB_API_VERSION=v22.0

# Optional: App credentials (for token validation)
# FB_APP_ID=your_app_id
# FB_APP_SECRET=your_app_secret

# Optional: Debug mode
# FB_DEBUG=true
